apiVersion: batch/v1
kind: CronJob
metadata:
  name: postgres-backup
  namespace: toptal-prod
spec:
  schedule: "0 2 * * *"
  jobTemplate:
    spec:
      template:
        spec:
          containers:
          - name: backup-maker
            image: shan5a6/postgis:10
            imagePullPolicy: Always
            args:
            - /bin/bash
            - /do_backup.sh
            env:
            - name: POSTGRES_PASSWORD
              valueFrom:
                secretKeyRef:
                  name: secrets
                  key: POSTGRES_PASSWORD
            - name: POSTGRES_DB
              valueFrom:
                secretKeyRef:
                  name: secrets
                  key: POSTGRES_DB
            - name: POSTGRES_USER
              valueFrom:
                secretKeyRef:
                  name: secrets
                  key: POSTGRES_USER
            - name: AWS_ACCESS_KEY_ID
              valueFrom:
                secretKeyRef:
                  name: secrets
                  key: AWS_ACCESS_KEY_ID
            - name: AWS_SECRET_ACCESS_KEY
              valueFrom:
                secretKeyRef:
                  name: secrets
                  key: AWS_SECRET_ACCESS_KEY
            - name: AWS_DEFAULT_REGION
              value: "us-east-1"
            - name: DB_BACKUP_PASSWORD
              valueFrom:
                secretKeyRef:
                  name: secrets
                  key: DB_BACKUP_PASSWORD
            - name: S3_BACKUP_PATH
              value: "s3://nvirg-src1"
            - name: POSTGRES_HOST
              value: "postgres"
          restartPolicy: OnFailure
